package project;
//class
public class Interest {
//fields
	
private int  i,p,t;
private double r;

//constructor

public Interest(int p,double r,int t){
	this.p = p;
	this.r = r;
	this.t = t;
}
//methods
public void calculationinterest(){
	i = (int) (p*r*t);
	System.out.println("final amount for 3 years:"+i);
}

}


